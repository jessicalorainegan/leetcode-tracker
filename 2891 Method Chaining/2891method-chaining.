import pandas as pd

def findHeavyAnimals(animals: pd.DataFrame) -> pd.DataFrame:
    result = (
        animals[animals["weight"] > 100]           # filter
        .sort_values("weight", ascending=False)    # sort
        [["name"]]                                 # keep only 'name'
        .reset_index(drop=True)                    # clean index (optional)
    )
    return result 